<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.NOTIFICATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/cineapp2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cineapp2"
        android:supportsRtl="true"
        android:theme="@style/Theme.CineApp"
        tools:targetApi="31">
        <activity
            android:name=".Activities.Activities.MainActivity2"
            android:exported="false"
            android:label="@string/title_activity_main2"
            android:theme="@style/Theme.CineApp" />
        <activity
            android:name=".Activities.Activities.DetailsWatchlistActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.Activities.MainActivityMenu"
            android:exported="false" />

        <activity
            android:name=".Activities.Activities.PopupView"
            android:exported="false" />
        <activity
            android:name=".Activities.Activities.detailsFilmActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.Activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Activities.ProfileUserActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.Activities.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.Activities.EditActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.Activities.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.Activities.MainUserActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service android:name=".Activities.Service.NotificationService" />
    </application>

</manifest>